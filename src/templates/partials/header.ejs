<header class="fixed top-0 left-0 right-0 z-40 bg-bg-primary/80 backdrop-blur-lg border-b border-zinc-800">
  <div class="container mx-auto px-4">
    <nav class="flex items-center justify-between h-16 md:h-20">
      
      <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>" class="flex items-center gap-2 md:gap-3 group">
        <div class="w-10 h-10 md:w-12 md:h-12 rounded-full overflow-hidden ring-2 ring-primary/50 group-hover:ring-primary transition-all flex-shrink-0">
          <img src="<%= (typeof basePath !== 'undefined' ? basePath : '') + (typeof profile !== 'undefined' && profile && profile.avatar ? profile.avatar.replace(/^\//, '') : config.model.avatar.replace(/^\//, '')) %>" alt="<%= config.model.name %>" class="w-full h-full object-cover">
        </div>
        <div>
          <span class="text-base md:text-xl font-bold text-white flex items-center gap-1">
            <%= config.model.name %>
            <span class="text-amber-400 text-xs">â˜…</span>
          </span>
          <span class="hidden sm:block text-xs text-text-secondary"><%= config.model.tagline %></span>
        </div>
      </a>

      
      <div class="hidden md:flex items-center gap-8">
        <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>" class="text-text-secondary hover:text-white transition-colors py-2">Home</a>
        <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>videos/" class="text-text-secondary hover:text-white transition-colors py-2">Videos</a>
        <a href="<%= profileUrl %>" target="_blank" rel="noopener nofollow"
           class="inline-flex items-center gap-2 px-5 py-2.5 bg-primary hover:bg-primary-hover text-white text-sm font-semibold rounded-xl transition-all duration-300 shadow-lg shadow-primary/25 hover:shadow-xl hover:shadow-primary/30 hover:-translate-y-0.5">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
          </svg>
          Profil besuchen
        </a>
      </div>

      
      <button id="mobile-menu-btn" class="md:hidden p-2 text-text-secondary hover:text-white transition-colors" aria-label="Menu">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </nav>
  </div>

  
  <div id="mobile-menu" class="md:hidden hidden bg-bg-secondary border-b border-zinc-800">
    <div class="container mx-auto px-4 py-4 space-y-4">
      <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>" class="block py-2 text-text-secondary hover:text-white transition-colors">Home</a>
      <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>videos/" class="block py-2 text-text-secondary hover:text-white transition-colors">Videos</a>
      <a href="<%= profileUrl %>" target="_blank" rel="noopener nofollow"
         class="flex items-center justify-center gap-2 w-full px-5 py-3 bg-primary hover:bg-primary-hover text-white font-semibold rounded-xl transition-colors">
        Profil besuchen
      </a>
    </div>
  </div>
</header>

<script>
  document.getElementById('mobile-menu-btn').addEventListener('click', function() {
    document.getElementById('mobile-menu').classList.toggle('hidden');
  });
</script>
